<html>
<title>Silent Auction Items</title>
<head><link rel = stylesheet href = "style.css" type = "text/css">
</head>
<body>
<p>
<h1 class = "subheader">Silent Auction Items</h1>
</p>

<div class ="maintile">
<table cellpadding = "10"class = "eventstable">
  <% @products.each_slice(2) do |products| %> 
      <tr>
        <%products.each do |p| %>  
          <td class = "productname"><%=p.name%></td>
        <%end%>
    </tr>    
    <tr>
        <%products.each do |product|%>
            <td class = "standardimage"><%=image_tag product.avatar.url(:medium) %></td>
          <%end%>
    </tr>  
    <tr>
        <%products.each do |p| %>  
          <td class = "productprice"><%=p.price%></td>
        <%end%>
    </tr>
  <%end%>


</table>
</div>

</body>
</html>



